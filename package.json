{
  "name": "nvm-node-switch",
  "displayName": "NVM Node Switch",
  "description": "Auto-switch Node versions on .nvmrc or manually install new node\n基于.nvmrc自动切换Node或手动安装新版本",
  "version": "0.0.48",
  "icon": "icon.png",
  "publisher": "FoodGravity",
  "repository": {
    "type": "git",
    "url": "https://github.com/FoodGravity/NVMNodeSwitch.git"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "NVM Node Switch",
      "properties": {
        "nvmNodeSwitch.language": {
          "type": "string",
          "enum": [
            "zh-CN",
            "en"
          ],
          "default": "zh-CN",
          "description": "插件界面语言"
        },
        "nvmNodeSwitch.sources": {
          "type": "array",
          "default": [
            {
              "name": "nodejs",
              "url": "https://nodejs.org/dist/index.json"
            },
            {
              "name": "npmmirror",
              "url": "https://cdn.npmmirror.com/binaries/node/index.json"
            }
          ],
          "description": "Node版本列表来源",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nodeVersionManager",
          "title": "Node Version Manager",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "nodeVersionManager": [
        {
          "id": "NVMNodeSwitchWebview",
          "name": "Node 版本管理器",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/item/context": [],
      "view/title": [],
      "editor/context": [],
      "statusBar/item": [
        {
          "command": "nvm.showCurrentVersion",
          "when": "true",
          "group": "statusBar",
          "alignment": "left"
        }
      ]
    }
  },
  "scripts": {
    "Update package": "node update-version.js && node ./esbuild.js --production && vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "package": "node ./esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.5",
    "@types/node": "^24.1.0",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.6.1-2",
    "esbuild": "^0.25.8",
    "html-minifier": "^4.0.0"
  }
}